#:kivy 1.10.1

<TuppyTCGGame>:

<Message>:
    opacity: 0
    message_text: label_id
    Label:
        id: label_id
        font_size:60
        canvas.before:
            Color:
                rgba: self.parent.background_color
            RoundedRectangle:
                size: self.texture_size[0] + 20, self.texture_size[1] + 20
                pos: self.center_x - self.texture_size[0] * 0.5 - 10, self.center_y - self.texture_size[1] * 0.5 - 10


<CardSlot>:
    card_widget: widget_id
    Widget:
        id: widget_id
        size: self.parent.size
        on_touch_down: root.on_touch_down(*args[1])

<Field>:
    size: 780, 255
    card1: slot1
    card2: slot2
    card3: slot3
    card4: slot4
    padding: [10, 10]
    spacing: 20

    canvas:
        Color:
            rgba: 1, 1, 1, .3
        Line:
            width: 2
            rectangle: (self.x, self.y, self.width/4, self.height)
        Line:
            width: 2
            rectangle: (self.x + self.width/4, self.y, self.width/4, self.height)
        Line:
            width: 2
            rectangle: (self.x + self.width/2, self.y, self.width/4, self.height)
        Line:
            width: 2
            rectangle: (self.x + 3*self.width/4, self.y, self.width/4, self.height)

    CardSlot:
        id: slot1
    CardSlot:
        id: slot2
    CardSlot:
        id: slot3
    CardSlot:
        id: slot4


<GUICard>:
    size: 175, 235

    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            pos: 0, 0
            size: self.size

    canvas:
        Color:
            rgba: self.border_color
        Line:
            width: 2.
            rectangle: (0, 0, self.width, self.height)


<CreatureCard>:
    card_type: type_id
    card_energy: energy_id
    card_health: health_id
    card_name: name_id
    card_image: image_id
    card_attack: attack_id
    card_damage: damage_id

    Label:
        id: energy_id
        font_size: 14
        text: "2"
        text_size: self.size
        halign: "left"
        pos: 15, root.height - 30

    Label:
        id: type_id
        font_size: 14
        text: "TypeA"
        text_size: self.size
        halign: "left"
        pos: 30, root.height - 30


    Label:
        id: health_id
        font_size: 14
        text: "<3: 100"
        text_size: self.size
        halign: "right"
        pos: root.width - 15 - self.width, root.height - 30

    Label:
        id: name_id
        font_size: 18
        text: "Creature Name"
        text_size: self.size
        pos: 15, root.height - 55

    RelativeLayout:
        id: image_id
        size_hint: None, None
        size: root.width - 30, root.height - 65 - 70
        pos: 15, 70
        canvas.before:
            Color:
                rgba: .1, .1, .1, .5
            Rectangle:
                size: self.width, self.height
        canvas:
            Color:
                rgba: .1, .1, 1, .9
            Line:
                width: 1.5
                rectangle: (0, 0, self.width, self.height)

        Label:
            font_size: 14
            text: "Creature Image"
            text_size: self.size
            halign: "center"
            valign: "center"
            pos: 0, 0

    Label:
        font_size: 14
        text: "Attack:"
        text_size: self.size
        pos: 15, 45
    Label:
        id: attack_id
        font_size: 14
        text: "+2"
        text_size: self.size
        halign: "right"
        pos: root.width - 15 - self.width, 45
    Label:
        font_size: 14
        text: "Damage\nnegation:"
        text_size: self.size
        pos: 15, 5
    Label:
        id: damage_id
        font_size: 14
        text: "30 remaining\n5/combat"
        text_size: self.size
        halign: "right"
        pos: root.width - 15 - self.width, 5